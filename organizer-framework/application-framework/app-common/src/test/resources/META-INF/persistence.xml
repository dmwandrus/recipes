<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="test_app_meta_data_pu" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    
    <class>mil.navair.iframework.appframework.common.AppMetaData</class>
    <class>mil.navair.iframework.appframework.common.BundleMetaData</class>
    
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/p8a_if_db"/>
      <property name="javax.persistence.jdbc.password" value="p8a_dba"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.user" value="p8a_if_dba"/>
      
      <property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=INFO, SQL=TRACE"/>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(foreignKeys=true,schemaAction='drop,add')"/>
    </properties>
  </persistence-unit>
</persistence>
